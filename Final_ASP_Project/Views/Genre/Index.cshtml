@{

    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}

@model IEnumerable<Genre>
<a class=" btn btn-primary" asp-controller="Genre" asp-action="Create">Add new</a>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
      <th>Action</th>
      <th></th>
    </tr>
    @foreach (var genre in Model)
    {
        <tr>
            <th>@genre.genre_Id</th>
            <th>@genre.genre_Name</th>
            <th>@genre.genre_Description</th>
        
            <td>
                <a asp-action="Edit" asp-route-id=@genre.genre_Id> Edit</a>
                <a asp-action="Delete" asp-route-id=@genre.genre_Id onclick="return confirm('Are You Sure?');"> Delete</a>
            </td>
            <th></th>
        </tr>
    }
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}