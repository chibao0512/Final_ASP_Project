@model Genre
<h1>Edit genre</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="genre_Name" class="form-control" />
                <span asp-validation-for="genre_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Description</label>
                <input asp-for="genre_Description" class="form-control" />
                <span asp-validation-for="genre_Description" class="text-danger"></span>
            </div>
            <br />
            <hr />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

