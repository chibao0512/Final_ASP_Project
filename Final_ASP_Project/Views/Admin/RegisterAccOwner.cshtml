@model Final_ASP_Project.Models.Account

@{
   
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["Fail"] != null)
{
    <div class="alert alert-danger">
        <strong>
            Error
        </strong>@TempData["Fail"]
    </div>
}
<br />
<div class="col-md-8 grid-margin stretch-card" style="margin-left:230px">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title" style="text-align:center">Create Owner</h3>
            <form asp-controller="Admin" asp-action="RegisterAccOwner" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" asp-for="Email" class="form-control" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" asp-for="Address" class="form-control" aria-required="true" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Day of brith</label>
                    <input type="date" asp-for="DoB" class="form-control" aria-required="true" />
                    <span asp-validation-for="DoB" class="text-danger"></span>
                </div>
                <label class="form-label">Gender</label>
                <div class="d-xl-flex justify-content-xl-start" style="margin-right: 16px;">
                    <div class="form-check">
                        <input asp-for="Gender" value="M" class="form-check-input" type="radio" id="formCheck-2">
                        <label class="form-check-label" for="formCheck-2">Male</label>
                    </div>
                    <div class="form-check" style="margin-left: 21px;">
                        <input asp-for="Gender" value="F" class="form-check-input" type="radio" id="formCheck-1">
                        <label class="form-check-label" for="formCheck-1">Female</label>
                    </div>
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input type="text" asp-for="Phone" class="form-control" aria-required="true" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" asp-for="Password" class="form-control" aria-required="true" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>ConfirmPassword</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" aria-required="true" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <br /> 
                <input type="submit" value="Register" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>

