@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Book>
<a class=" btn btn-primary" asp-controller="Book" asp-action="Create">Add new</a>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Image</th>
        <th>Author</th>
        <th>Quantity</th>
        <th>Price</th>    
        <th>Publication Date</th>
        <th>Genre</th>
        <th>Publisher</th>
        <th>Description</th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
           <th>@book.book_Id</th>
            <th>@book.book_Title</th>
            <th><img src="~/uploads/@book.book_urlImage" style="width: 100px; height: 100px" /></th>
            <th>@book.book_Author</th>
            <th>@book.book_Quantity</th>
            <th>@book.Book_Price</th>
            <th>@book.publication_date</th>
            <th>@book.genre.genre_Name</th>
            <th>@book.book_Publisher</th>
            <th>@book.book_Description</th>    
            <td>
                <a asp-action="Edit" asp-route-id=@book.book_Id asp-route-img="@book.book_urlImage"> Edit</a>
                <a asp-action="Delete" asp-route-id=@book.book_Id asp-route-img="@book.book_urlImage" onclick="return confirm('Are You Sure?');"> Delete</a>
            </td>
        </tr>
    }
</table>
